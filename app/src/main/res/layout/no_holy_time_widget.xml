<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/ll_widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/no_holy_time_widget">

        <TextView
            android:id="@+id/tv_no_holy_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:contentDescription="@string/widget_is_not_sabbath_yet"
            android:text="@string/widget_is_not_sabbath_yet"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="@string/widget_is_not_sabbath_yet"
            android:gravity="center"
             />

        <TextView
            android:id="@+id/tv_next_holy_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Next Sabbath start at ..."
            tools:text="Next Sabbath start at ..."
            android:textColor="@color/date_widget"/>

    </LinearLayout>

</RelativeLayout>