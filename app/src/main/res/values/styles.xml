<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="@style/AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.Meditations" parent="@style/AppTheme">
    </style>

    <style name="AppTheme.Meditation" parent="@style/AppTheme">
    </style>

    <style name="HolyTime.ListItemTitle" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HolyTime.ListItemVerse" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="HolyTime.DetailTitle" parent="@style/Base.TextAppearance.AppCompat.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HolyTime.DetailVerse" parent="@style/Base.TextAppearance.AppCompat.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HolyTime.DetailBody" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
</resources>
